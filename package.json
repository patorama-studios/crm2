{
  "name": "patorama-crm-backend",
  "version": "1.0.0",
  "description": "Backend API for Patorama Studios CRM",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "production": "NODE_ENV=production node server.js",
    "test": "jest",
    "deploy": "npm run build-frontend && npm run copy-files",
    "build-frontend": "cd ../patorama-crm-frontend && npm run build",
    "copy-files": "cp -r ../patorama-crm-frontend/build ./public"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.5",
    "dotenv": "^16.3.1",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "stripe": "^14.10.0",
    "axios": "^1.6.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0"
  }
}